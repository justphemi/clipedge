<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.clipedge</groupId>
  <artifactId>clipedge</artifactId>
  <name>ClipEdge</name>
  <version>1.0.0</version>
  <description>Modern cross platform clipboard manager</description>
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <includes>
          <include>**/*</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <source>17</source>
          <target>17</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.openjfx</groupId>
        <artifactId>javafx-maven-plugin</artifactId>
        <version>0.0.8</version>
        <configuration>
          <mainClass>${main.class}</mainClass>
          <options>
            <option>--add-exports</option>
            <option>javafx.base/com.sun.javafx.runtime=ALL-UNNAMED</option>
            <option>--add-opens</option>
            <option>javafx.graphics/com.sun.javafx.css=ALL-UNNAMED</option>
            <option>--add-opens</option>
            <option>javafx.graphics/com.sun.javafx.scene=ALL-UNNAMED</option>
            <option>--add-opens</option>
            <option>javafx.graphics/com.sun.javafx.util=ALL-UNNAMED</option>
          </options>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.5.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>${main.class}</mainClass>
                </transformer>
              </transformers>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.panteleyev</groupId>
        <artifactId>jpackage-maven-plugin</artifactId>
        <version>1.6.0</version>
        <configuration>
          <name>ClipEdge</name>
          <appVersion>${project.version}</appVersion>
          <vendor>${vendor.name}</vendor>
          <copyright>Â© 2025 ${vendor.name}. All Rights Reserved.</copyright>
          <description>Modern cross platform clipboard manager</description>
          <destination>target/dist</destination>
          <input>target</input>
          <mainJar>${project.build.finalName}.jar</mainJar>
          <mainClass>${main.class}</mainClass>
          <javaOptions>
            <option>-Dfile.encoding=UTF-8</option>
            <option>--add-exports</option>
            <option>javafx.base/com.sun.javafx.runtime=ALL-UNNAMED</option>
            <option>--add-opens</option>
            <option>javafx.graphics/com.sun.javafx.css=ALL-UNNAMED</option>
            <option>--add-opens</option>
            <option>javafx.graphics/com.sun.javafx.scene=ALL-UNNAMED</option>
            <option>--add-opens</option>
            <option>javafx.graphics/com.sun.javafx.util=ALL-UNNAMED</option>
          </javaOptions>
          <icon>src/main/resources/logo.png</icon>
          <installDir>${vendor.name}/ClipEdge</installDir>
          <winMenu>true</winMenu>
          <winShortcut>true</winShortcut>
          <winDirChooser>true</winDirChooser>
          <macPackageName>ClipEdge</macPackageName>
          <macPackageIdentifier>com.clipedge.ClipEdge</macPackageIdentifier>
          <linuxShortcut>true</linuxShortcut>
          <linuxMenuGroup>Office</linuxMenuGroup>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>mac</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.panteleyev</groupId>
            <artifactId>jpackage-maven-plugin</artifactId>
            <configuration>
              <icon>src/main/resources/logo.icns</icon>
              <mac>
                <bundleName>ClipEdge</bundleName>
              </mac>
            </configuration>
          </plugin>
        </plugins>
      </build>
      <properties>
        <detected.os>mac</detected.os>
      </properties>
    </profile>
    <profile>
      <id>win</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.panteleyev</groupId>
            <artifactId>jpackage-maven-plugin</artifactId>
            <configuration>
              <icon>src/main/resources/logo.ico</icon>
              <winMenu>true</winMenu>
              <winShortcut>true</winShortcut>
              <winDirChooser>true</winDirChooser>
            </configuration>
          </plugin>
        </plugins>
      </build>
      <properties>
        <detected.os>win</detected.os>
      </properties>
    </profile>
    <profile>
      <id>linux</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.panteleyev</groupId>
            <artifactId>jpackage-maven-plugin</artifactId>
            <configuration>
              <icon>src/main/resources/logo.png</icon>
              <linuxShortcut>true</linuxShortcut>
              <linuxMenuGroup>Office</linuxMenuGroup>
            </configuration>
          </plugin>
        </plugins>
      </build>
      <properties>
        <detected.os>linux</detected.os>
      </properties>
    </profile>
    <profile>
      <id>dev-mac</id>
      <properties>
        <detected.os>mac</detected.os>
      </properties>
    </profile>
    <profile>
      <id>dev-win</id>
      <properties>
        <detected.os>win</detected.os>
      </properties>
    </profile>
    <profile>
      <id>dev-linux</id>
      <properties>
        <detected.os>linux</detected.os>
      </properties>
    </profile>
  </profiles>
  <properties>
    <main.class>com.clipedge.ClipEdgeApp</main.class>
    <maven.compiler.source>17</maven.compiler.source>
    <vendor.name>JustPhemi</vendor.name>
    <maven.compiler.target>17</maven.compiler.target>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <javafx.version>21</javafx.version>
  </properties>
</project>
